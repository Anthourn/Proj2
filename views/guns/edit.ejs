<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
    <%- include ('../partials/head.ejs') %>
    </head>
    <body>
        <h1>Edit</h1>
        <div class="">
            <form class="" action="/guns/<%=gun.id%>?_method=PUT" method="POST">
                Name:<input type="text" name="name" value="<%=gun.name%>">
                Description:<input type="text" name="description" value="<%=gun.description%>">
                Class:<input type="text" name="class" value="<%=gun.class%>">
                Ammo:<input type="text" name="ammo" value="<%=gun.ammo%>">
                Fire Rate:<input type="number" name="fireRate" value="<%=gun.fireRate%>">
                Damage:<input type="number" name="damage" value="<%=gun.damage%>">
                DPS:<input type="number" name="dps" value="<%=gun.dps%>">
                ADS Speed:<input type="number" name="adsSpeed" value="<%=gun.adsSpeed%>">
                Reload time:<input type="number" name="reloadTime" value="<%=gun.reloadTime%>">
                Recoil Pattern:<input type="text" name="recoil" value="<%=gun.recoil%>">
                Image:<input type="text" name="img" value="<%=gun.img%>">
                <input type="submit"  >
            </form>
        </div>

    </body>
</html>
